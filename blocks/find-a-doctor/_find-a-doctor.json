{
  "definitions": [
    {
      "title": "Find a Doctor",
      "id": "find-a-doctor",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Find a Doctor",
              "model": "find-a-doctor",
              "key-value": true
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "find-a-doctor",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "title",
          "label": "Title",
          "value": "Find a Doctor"
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "subtitle",
          "label": "Subtitle",
          "value": "Search for healthcare providers in your area"
        },
        {
          "component": "select",
          "name": "layout",
          "label": "Layout Style",
          "valueType": "string",
          "value": "default",
          "options": [
            {
              "name": "Default",
              "value": "default"
            },
            {
              "name": "Compact",
              "value": "compact"
            },
            {
              "name": "Expanded",
              "value": "expanded"
            }
          ]
        },
        {
          "component": "select",
          "name": "dataSourceType",
          "label": "Data Source Type",
          "valueType": "string",
          "value": "dam-json",
          "options": [
            {
              "name": "JSON File from DAM",
              "value": "dam-json"
            },
            {
              "name": "Content Fragments",
              "value": "content-fragments"
            },
            {
              "name": "External API",
              "value": "api"
            },
            {
              "name": "Static JSON",
              "value": "json"
            }
          ]
        },
        {
          "component": "aem-content",
          "name": "damJsonPath",
          "label": "JSON File Path",
          "description": "Select JSON file from DAM",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/dam"
          },
          "condition": { "==": [{ "var": "dataSourceType" }, "dam-json"] }
        },
        {
          "component": "aem-content",
          "name": "contentFragmentFolder",
          "label": "Content Fragment Folder",
          "description": "Select folder containing multiple doctor Content Fragments",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/dam"
          },
          "condition": { "==": [{ "var": "dataSourceType" }, "content-fragments"] }
        },
        {
          "component": "aem-content",
          "name": "contentFragmentFolder",
          "label": "Content Fragment Folder",
          "description": "Select folder containing multiple doctor Content Fragments",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/dam"
          },
          "condition": { "==": [{ "var": "dataSourceType" }, "content-fragments"] }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "apiUrl",
          "label": "API URL",
          "description": "External API endpoint for doctor data",
          "condition": { "==": [{ "var": "dataSourceType" }, "api"] }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "staticJsonPath",
          "label": "Static JSON Path",
          "description": "Path to static JSON file",
          "value": "/data/doctors.json",
          "condition": { "==": [{ "var": "dataSourceType" }, "json"] }
        },
        {
          "component": "boolean",
          "name": "enableLocationSearch",
          "label": "Enable Location Search",
          "value": "true",
          "valueType": "boolean"
        },
        {
          "component": "boolean",
          "name": "enableSpecialtyFilter",
          "label": "Enable Specialty Filter",
          "value": "true",
          "valueType": "boolean"
        },
        {
          "component": "boolean",
          "name": "enableProviderNameSearch",
          "label": "Enable Provider Name Search",
          "value": "true",
          "valueType": "boolean"
        }
      ]
    }
  ],
  "filters": []
